<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:id="@+id/order_thing_content"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
    android:id="@+id/order_thing_content_img"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_margin="@dimen/margin_10dp"
    android:layout_centerVertical="true"/>
    <TextView
    android:id="@+id/order_thing_content_title"
    android:layout_toRightOf="@id/order_thing_content_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:text="这是一个测试数据"/>
    <TextView
    android:id="@+id/order_thing_content_price"
    android:layout_toRightOf="@id/order_thing_content_img"
    android:layout_alignParentBottom="true"
    android:text="0.00"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:textColor="@color/home_page_title_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/order_thing_content_num"
    android:text="x1"
    android:layout_margin="@dimen/margin_10dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
