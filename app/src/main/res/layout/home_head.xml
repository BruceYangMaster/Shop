<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/colorAccent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/home_scan_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@mipmap/zxing" />

    <ImageView
        android:id="@+id/home_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@mipmap/sms_my" />

    <EditText
        android:id="@+id/home_search_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/home_message"
        android:layout_toRightOf="@id/home_scan_qrcode"
        android:background="@android:color/darker_gray"
        android:drawableLeft="@mipmap/homepage_search"
        android:drawablePadding="10dp"
        android:editable="false"
        android:hint="搜索一下"
        android:singleLine="true"
        android:textColor="#666666" />
</RelativeLayout>