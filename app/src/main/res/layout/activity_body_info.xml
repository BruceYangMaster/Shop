<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/tuikuan_thing_title"
        android:layout_width="match_parent"
        android:background="@drawable/layout_selector"
        android:layout_height="@dimen/title_height">
        <TextView
            android:id="@+id/back_txt"
            android:background="@drawable/layout_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人信息"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableLeft="@mipmap/arrowfan"
            android:textColor="@color/cardview_dark_background"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_size"/>
        <ImageView
            android:id="@+id/pop_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_img_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_image_relat"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/layout_selector"
        android:padding="@dimen/margin_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_txt"
            android:layout_centerVertical="true"
            android:text="头像"/>
        <ImageView
            android:id="@+id/person_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/person_img"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/person_info_relat"
        android:layout_width="match_parent"
        android:background="@drawable/layout_selector"
        android:padding="@dimen/margin_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rank_txt"
            android:text="会员等级"/>
        <ImageView
            android:id="@+id/rank_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_icon"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rank_img"
            android:text="T1"
            android:textColor="@color/user_background"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sex_relat"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_10dp"
        android:background="@drawable/layout_selector"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sex_txt"
            android:text="修改性别"/>
        <ImageView
            android:id="@+id/sex_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_icon"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sex_img"
            android:textColor="@color/user_background"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="男"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/address_relat"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_10dp"
        android:background="@drawable/layout_selector"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_txt"
            android:text="收货地址管理"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
