<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/address_name"
        android:text="aaaa"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address_phone"
        android:text="12314324"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address_txt"
        android:text="地址"
        android:layout_below="@id/address_name"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/address_check"
        android:layout_below="@id/address_txt"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address_set_txt"
        android:text="设置为默认地址"
        android:layout_below="@id/address_txt"
        android:layout_toRightOf="@id/address_check"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address_delete"
        android:text="删除"
        android:layout_below="@id/address_txt"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_16"
        android:layout_marginRight="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address_edit"
        android:text="编辑"
        android:textSize="@dimen/sp_16"
        android:layout_below="@id/address_txt"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_toLeftOf="@id/address_delete"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
