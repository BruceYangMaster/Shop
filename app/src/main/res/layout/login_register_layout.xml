<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/onkeysign_tellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="10dp"
                android:hint="@string/hint_signin_user"
                android:maxLength="11"
                android:textColorHint="@color/sign_hint"
                android:textSize="@dimen/sign_hint_size">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <EditText
            android:id="@+id/signin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="@color/sign_hint"
            android:textSize="@dimen/sign_hint_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/zhuce_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linerlayout"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/yanzhengma_ed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_yuanjiao"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="10dp"
                android:hint="验证码"
                android:maxLength="6"
                android:textColorHint="@color/sign_hint"
                android:textSize="@dimen/sign_hint_size" />

            <TextView
                android:id="@+id/getSMS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/btn_tv_click"
                android:gravity="center"
                android:padding="5dp"
                android:text="获取验证码" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>