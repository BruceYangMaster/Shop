<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deepblue.shop">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".Business.Activity.MyApplication"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Business.Activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Business.Activity.Basic.BasicActivity"
            ></activity>
        <activity android:name=".Business.Activity.person.AllOrderActivity"></activity>
        <activity android:name=".Business.Activity.Home.GoodsDetailActivity" />
        <activity android:name=".Business.Activity.Home.SearchActivity"></activity>
    </application>

</manifest>